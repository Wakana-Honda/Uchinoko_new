<div class="calendar mx-3">
<%= month_calendar events: @records do |date, records| %>
  
  <%= date.day %>
  <!--<span class="calendar-title"><%#= start_date.year %>å¹´  <%#= t('date.month_names')[start_date.month] %></span>-->
  
  <% @records.each do |record| %>
   <%if record.created_at.strftime('%Y-%m-%d') == date.strftime('%Y-%m-%d') %> 
   
      <% if record.pet.name == record.pet.name %>
       <div>
        <%= link_to record_path(record.id) do %>
         <%= record.pet.name %>
        <% end %>
       </div>
       <% else %>
        <%= link_to record_path(record.id) do %>
         <%= record.pet.name %>
        <% end %>
      <% end %>
      
   <% end %>
   
  <% end %>
  
<% end %>
</div>

