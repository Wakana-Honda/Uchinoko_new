
<%= form_with model: @type, url: '/type', method: :post do |f| %>
 <%= render 'shared/errors', model: f.object %>

 <%= f.label :タイプ %>
 <%= f.text_field :name %>
 <%= f.submit '新規登録',class:"btn btn-info" %>
<% end %>


<div class = "my-3"><strong><u>タイプ一覧</u></strong></div>

  <% @types.each do |type| %>
  <div class = "mt-2 mb-3">
    <%= type.name %>
    <%= link_to "編集する", edit_type_path(type), class:"btn btn-success mb-3" %>
    <%= link_to "削除", type_path(type),method: :delete,
      "data-confirm" => "関連するフードの記録も削除されます。本当に削除しますか？", class:"btn btn-danger mb-3" %>
   </div>
  <% end %>
  